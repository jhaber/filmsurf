extends layout

block content
  header(id='header-search')
    div(class='container')
      div(class='row-fluid')
        div(class='span12 pagination-centered')
          img(src='/images/logo.png')
  section(id='section-search')
    div(class='container')
      div(class='row-fluid')
        div(class='span12 pagination-centered')
          form(class='form-search')
            input(id='search', type='text', class='search-query', autocomplete='off')
      div(class='row-fluid')
        div(class='span12 pagination-centered')
          div(id='container-results')
  script(type='text/javascript', src='/scripts/jquery-1.8.3.min.js')
  script(type='text/javascript', src='/scripts/bootstrap.min.js')
  script(type='text/javascript', src='/scripts/search.js')